@using Products.Web_App.DataConvertor
@model IEnumerable<Products.Web_App.Entities.Productt>

@{
    ViewData["Title"] = "Index";
}

<h2>لیست کالاها</h2>
<p>
    <a asp-action="Create">ثبت محصول جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.createdate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
     @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                <img src="/Product/Image/@item.ImageName" class="thumbnail" style="max-width: 120px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @item.createdate.ToShamsi()
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-success">ویرایش</a>
                <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-default">جزئیات</a>
                <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger">حذف</a>
                <a asp-action="SendMessage" asp-route-id="@item.ProductId" class="btn btn-link">ارسال</a>
            </td>
        </tr>
}
    </tbody>
</table>
